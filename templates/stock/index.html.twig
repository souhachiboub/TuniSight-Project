
{% block title %}Liste des Stocks{% endblock %}

{% block body %}
    <h1>Liste des Stocks</h1>
    <a href="{{ path('app_stock_new') }}">Ajouter un Stock</a>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre en Stock</th>
                <th>Disponibilité</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for stock in stocks %}
                <tr>
                    <td>{{ stock.id }}</td>
                    <td>{{ stock.nbrStock }}</td>
                    <td>{{ stock.disponibilite ? 'Oui' : 'Non' }}</td>
                    <td>
                        <a href="{{ path('app_stock_edit', {'id': stock.id}) }}">Modifier</a>
                        <a href="{{ path('app_stock_delete', {'id': stock.id}) }}" 
                           onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce stock ?');">
                           Supprimer
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

