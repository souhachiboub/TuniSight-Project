				<script>
					$(document).ready(function () {
$('#openModalBtn').on('click', function () {
$('#addActiviteModal').modal('show');
$('#addActiviteModalLabel').text('Ajouter une activité');
$('#form-container').html('');

$.ajax({
url: '{{ path("app_activite_new") }}',
method: 'GET',
success: function (response) {
$('#form-container').html(response);

$('#activite-form').on('submit', function (e) {
e.preventDefault();

var formData = new FormData(this);

$.ajax({
url: '{{ path("app_activite_new") }}',
method: 'POST',
data: formData,
processData: false,
contentType: false,
success: function () {
$('#addActiviteModal').modal('hide');
location.reload();
},
error: function (xhr) {
alert('Erreur lors de l\'ajout');
console.log(xhr.responseText);
}
});
});
},
error: function (xhr) {
console.log(xhr.responseText);
}
});
});

// Ouvrir modal pour éditer une activité
$('.edit-btn').on('click', function () {
var id = $(this).data('id');
$('#addActiviteModal').modal('show');
$('#addActiviteModalLabel').text('Modifier l\'activité');
$('#form-container').html('');

$.ajax({
url: '{{ path("app_activite_edit", {"id": "replace_with_id"}) }}'.replace('replace_with_id', id),
method: 'GET',
success: function (response) {
$('#form-container').html(response);

$('#activite-form').on('submit', function (e) {
e.preventDefault();

var formData = new FormData(this);

$.ajax({
url: '{{ path("app_activite_edit", {"id": "replace_with_id"}) }}'.replace('replace_with_id', id),
method: 'POST',
data: formData,
processData: false,
contentType: false,
success: function () {
$('#addActiviteModal').modal('hide');
location.reload();
},
error: function (xhr) {
alert('Erreur lors de la modification');
console.log(xhr.responseText);
}
});
});
},
error: function (xhr) {
console.log(xhr.responseText);
}
});
});
});
