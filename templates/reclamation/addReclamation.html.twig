
{% block body %}
<button class="btn btn-primary" data-modal="addReclamationModal">
        <img src="{{ asset('clients/images/write.png') }}" alt="Ajouter une réclamation" style="width: 30px; height: 30px;"  title="Ajouter une publication">
</button>

<div id="addReclamationModal" class="modal">  <div class="modal-content">
        <a href="#" class="close">&times;</a>
        <div class="logo" style="text-align: center;">
            <p style="font-weight:bold ; font-size : 24px ; color: #2B3940;">Soumettre une réclamation</p>
            {{ form_start(form, {'attr': {'id': 'reclamationForm'}}) }}
            <div class="input-group">
                <label for="{{ form.description.vars.id }}"></label>
                {{ form_widget(form.description, {
                    'attr': {
                        'rows': '5',
                        'cols': '33',
                        'placeholder': 'Décrivez votre réclamation',
                        'required': 'required',
                        'class': 'textarea'
                    }
                }) }}
                {% for error in form.description.vars.errors %}
                    <p style= "color : red;"class="error">{{ error.message }}</p>
                {% endfor %}
                <button type="submit" class="submit-btn">Soumettre</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block js %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const addReclamationModal = document.getElementById('addReclamationModal'); // Get the specific modal
        const openModalButton = document.querySelector('[data-modal="addReclamationModal"]'); // Get the specific button
        const closeModalButton = addReclamationModal.querySelector('.close'); //Close button of the specific modal


        function clearForm(modal) {
            const form = modal.querySelector('form');
            if (form) {
                form.reset();
            }
        }

        openModalButton.addEventListener('click', function(event) {
            event.preventDefault();

            // Hide other modals (if any) - Important if you have more modals
            const modals = document.querySelectorAll('.modal');
            modals.forEach(modal => {
                if (modal.id !== 'addReclamationModal') { // Exclude the target modal
                    modal.style.display = 'none';
                }
            });

            addReclamationModal.style.display = 'block'; // Show ONLY the target modal
        });

        closeModalButton.addEventListener('click', function(event) {
            event.preventDefault();
            addReclamationModal.style.display = 'none';
            clearForm(addReclamationModal);
        });

        // Textarea auto-resize (unchanged)
        const textarea = document.querySelector("textarea");
        textarea.addEventListener("input", function () {
            this.style.height = "auto";
            this.style.height = this.scrollHeight + "px";
        });
    });
</script>
{% endblock %}
