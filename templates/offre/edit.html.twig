        <h1 class="mb-4">{{ offre.activitie.libelle }}</h1>

        {{ form_start(form) }}
        
        <div class="mb-3">
            {{ form_row(form.reduction) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.dateDebut) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.dateExpiration) }}
        </div>

        <div class="mb-3">
            <label for="{{ form.activitie.vars.id }}">Activit√©</label>
            {{ form_widget(form.activitie, {'attr': {'class': 'form-control'}}) }}
