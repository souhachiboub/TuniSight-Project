<style>
	#activite-form {
		max-width: 600px;
		margin: 20px auto;
		padding: 20px;
		background: #f8f9fa;
		border-radius: 8px;
		box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
	}

	.form-group {
		display: flex;
		gap: 10px;
		margin-bottom: 10px;
	}

	.form-group > div {
		flex: 1;
	}

	.form-label {
		font-weight: bold;
		margin-bottom: 3px;
		display: block;
	}

	.form-control {
		width: 100%;
		padding: 6px;
		border: 1px solid rgb(162, 204, 236);
		border-radius: 5px;
	}


	.btn-primary {
		width: 100%;
		padding: 10px;
		margin-top: 15px;
		background-color: #26648e;
		color: white;
		border: none;
		border-radius: 5px;
		cursor: pointer;
	}

	.btn-primary:hover {
		background-color: #1d4f73;
	}
	#activite-form img {
    width: 420px;  
    height: 200px;  
    object-fit: cover; 
    margin-bottom: 10px; 
}

}

</style>

