

{% extends 'squeletteboutique.html.twig' %}


{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h3 class="text-center text-primary mb-4">Modifier le stock</h3>

        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.quantite, 'Quantité', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.quantite, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.quantite, {'attr': {'class': 'text-danger'}}) }}
                </div>
            </div>

          

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-success px-4">
                <i class="fas fa-save"></i> Enregistrer
            </button>
        </div>

        {{ form_end(form) }}
    </div>
</div>

<!-- Bootstrap & Font Awesome -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- Script pour afficher le popup avec SweetAlert -->
{% if success == 1 %}
<script>
    document.addEventListener("DOMContentLoaded", function() {
        Swal.fire({
            icon: 'success',
            title: 'Modification réussie !',
            text: 'Les modifications ont été enregistrées avec succès.',
            confirmButtonText: 'OK'
        }).then(() => {
            window.location.href = "{{ path('app_produit') }}";
        });
    });
</script>
{% endif %}

{% endblock %}
