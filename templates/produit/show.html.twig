
{% extends 'squeletteboutique.html.twig' %}
{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <div class="row">
            <div class="col-md-4 text-center">
                <img src="{{ asset('uploads/produits/' ~ produit.image) }}" 
                     alt="{{ produit.libelle }}" class="img-fluid rounded shadow-sm" width="200">
            </div>
            <div class="col-md-8">
                <h2 class="text-primary">{{ produit.libelle }}</h2>
                <p class="text-muted">{{ produit.description }}</p>
                
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>Quantité :</strong> {{ produit.quantite }}</li>
                    <li class="list-group-item">
                        <strong>Disponibilité :</strong> 
                        {% if produit.disponibilite %}
                            <span class="badge bg-success">Disponible</span>
                        {% else %}
                            <span class="badge bg-danger">Indisponible</span>
                        {% endif %}
                    </li>
                    <li class="list-group-item"><strong>Prix :</strong> <span class="text-danger">{{ produit.prix }} €</span></li>
                    <li class="list-group-item"><strong>Catégorie :</strong> {{ produit.CategorieProduit.nom }}</li>
                </ul>

                <div class="mt-3">
                    <a href="{{ path('app_produit') }}" class="btn btn-secondary">Retour à la liste</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
