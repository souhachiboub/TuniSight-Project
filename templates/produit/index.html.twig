<script>
document.addEventListener("DOMContentLoaded", function() {
    // Chargement du formulaire dans le modal
    document.querySelectorAll(".edit-produit-btn").forEach(button => {
        button.addEventListener("click", function() {
            let produitId = this.getAttribute("data-id");
            fetch(`/produit/${produitId}/edit`, {
                method: "GET",
                headers: {
                    "X-Requested-With": "XMLHttpRequest",
                    "Accept": "application/json"
                }
            })
            .then(response => response.text())
            .then(html => {
                document.getElementById("editProduitFormContainer").innerHTML = html;
            })
            .catch(error => console.error("Erreur lors du chargement du formulaire:", error));
        });
    });
    // // Fonction pour afficher le modal de succ√®s
function showSuccessModal(message) {
    let successMessage = document.getElementById("successMessage");
    if (successMessage) {
        successMessage.textContent = message; // Mettre √† jour le message du modal
    }
    let successModal = new bootstrap.Modal(document.getElementById("successModal"));
    successModal.show();
}
// Soumission du formulaire via AJAX
document.addEventListener("submit", function(e) {
    if (e.target && e.target.id === "form-edit-produit") {
        e.preventDefault(); // Emp√™che la soumission classique

        let form = e.target;
        let formData = new FormData(form);

        fetch(form.action, {
            method: form.method,
            body: formData,
            headers: {
                "X-Requested-With": "XMLHttpRequest",
                "Accept": "application/json"
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // Fermer la modal d'√©dition
                let modal = bootstrap.Modal.getInstance(document.getElementById("editProduitModal"));
                modal.hide();

                // Afficher le modal de succ√®s
                showSuccessModal(data.message);

                // Recharger la page apr√®s un court d√©lai pour voir les modifications
                setTimeout(() => {
                    location.reload();
                }, 2000);
            } else {
                // Afficher les erreurs de validation renvoy√©es par le serveur
                let errorContainer = form.querySelector(".error-message");
                if (!errorContainer) {
                    errorContainer = document.createElement("div");
                    errorContainer.classList.add("error-message", "alert", "alert-danger");
                    form.prepend(errorContainer);
                }
                errorContainer.textContent = data.message;
            }
        })
        .catch(error => {
            console.error("Erreur lors de la soumission du formulaire:", error);
            alert("Une erreur est survenue. Veuillez r√©essayer.");
        });
    }
});

});
</script>
