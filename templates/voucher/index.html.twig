{% extends 'admin/index.html.twig' %}

{% block body %}
<div class="container-fluid">
    <h1>Cr√©er un Nouveau Voucher</h1>

    {{ form_start(voucherForm, {'attr': {'novalidate': 'novalidate'}}) }}
