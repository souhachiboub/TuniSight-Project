{% extends 'admin/index.html.twig' %}

{% block body %}
<div class="container-fluid">
    <h1>Assigner Voucher à un Client</h1>
    <div class="mb-4">
        <a href="{{ path('voucher_show') }}" class="btn btn-secondary">Retour à la gestion des vouchers</a>
    </div>

    <form method="POST">
        <div class="mb-3">
            <label for="client_id" class="form-label">Sélectionner un client</label>
            <select id="client_id" name="client_id" class="form-select">
                <option value="">Choisir un client</option>
                {% for user in users %}
                    <option value="{{ user.id }}">{{ user.email }}</option>
                {% endfor %}
            </select>
        </div>

        <button type="submit" class="btn btn-success">Assigner le Voucher</button>
    </form>
</div>
{% endblock %}
